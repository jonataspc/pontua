<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/bp_color_dark</item>
        <item name="colorPrimary">@color/bp_color</item>
        <!--<item name="colorAccent">@color/bp_color_dark</item>-->

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/bp_color</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AppTheme.MenuButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@android:color/transparent</item>
        <item name="android:textColor">@color/bp_color_dark</item>
    </style>

    <style name="AppTheme.ButtonMin" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/LancMin</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AppTheme.ButtonMax" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/LancMax</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
