<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bsi.pontua.CadastroEntidadesNovoEditar">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Titulo"
        android:id="@+id/tvwTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/txtNomeEntidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="0dp"
        android:maxLines="1"
        android:hint="Nome"
        android:maxLength="25"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/tvwTitle"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/btnCadastrar"
        android:layout_below="@+id/edtUsuarioConsultaSenha"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Evento:"
        android:id="@+id/textView4"
        android:layout_below="@+id/txtNomeEntidade"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <Spinner
        android:id="@+id/spnEventos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/edtUsuarioConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="0dp"
        android:maxLines="1"
        android:hint="UsuÃ¡rio para consulta"
        android:maxLength="25"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/spnEventos"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edtUsuarioConsultaSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha para consulta"
        android:textSize="20sp"
        android:maxLines="1"
        android:maxLength="20"
        android:layout_alignParentEnd="true"
        android:password="true"
        android:layout_below="@+id/edtUsuarioConsulta"
        android:layout_alignParentLeft="true" />
</RelativeLayout>
