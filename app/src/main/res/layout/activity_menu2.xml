<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bsi.pontua.Menu2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Usuário:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtUsuario"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginStart="10dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentStart="false"
        android:fillViewport="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">



            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Cadastro de usuários"
                android:id="@+id/btnCadastroUsuarios" />


            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Cadastro de eventos"
                android:id="@+id/btnCadastroEventos" />


            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Cadastro de entidades"
                android:id="@+id/btnCadastroEntidades" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Cadastro de Ítens de Inspeção"
                android:id="@+id/btnCadastroItensInspecao" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Realizar avaliação"
                android:id="@+id/btnRealizarAvaliacao" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Consultar avaliações"
                android:id="@+id/btnConsultarAvaliacoes" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
